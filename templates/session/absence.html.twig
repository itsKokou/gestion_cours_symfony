
<h4 class="mb-4 mt-4 text-lg font-semibold text-gray-500 dark:text-white">
    Liste des Absents
</h4>

<div class="w-full overflow-hidden rounded-lg shadow-xs">
    <div class="w-full overflow-x-auto">
      <table class="w-full whitespace-no-wrap">
        <thead>
          <tr
            class="text-sm text-left font-semibold tracking-wide text-gray-500 uppercase border-b dark:border-gray-700 bg-gray-50 dark:bg-gray-900"
            style="color:#eb1616;"
          >
            <th class="px-4 py-3">N°</th>
            <th class="px-4 py-3 ">Matricule</th>
            <th class="px-4 py-3 ">Nom et Prénoms</th>
            <th class="px-4 py-3 ">Classe</th>
          </tr>
        </thead>
        <tbody
          class="bg-white text-left divide-y dark:divide-gray-700 dark:bg-gray-900"
        >
        {% for ab in absences %}
          <tr class="text-gray-700 dark:text-gray-400">
            <td class="px-4 py-3 text-sm">
              {{ab.id}}
            </td>
            <td class="px-4 py-3 text-sm">
              {{ab.matricule}}
            </td>
            <td class="px-4 py-3 text-sm">
              {{ab.nomComplet}}
            </td>
             <td class="px-4 py-3 text-sm">
              {{ab.classe}}
            </td>
          </tr>
        {% endfor %}    
        </tbody>
      </table>
    </div>
</div>